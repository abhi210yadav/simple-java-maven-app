pipeline {
    agent any

    options {
        skipStagesAfterUnstable()
    }

    stages {

        stage('Build') {
            steps {
                echo 'üî® Building the project...'
                sh 'mvn -B -DskipTests clean package'
            }
        }

        stage('Test') {
            steps {
                echo 'üß™ Running tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deliver') { 
            steps {
                echo 'üöÄ Delivering artifact...'
                sh '''
                    set -e  # Exit immediately on any error
                    echo "Current directory: $(pwd)"
                    echo "Listing project files:"
                    ls -la

                    if [ ! -d "target" ]; then
                      echo "‚ùå ERROR: 'target' directory not found!"
                      exit 1
                    fi

                    echo "Listing target directory:"
                    ls -la target

                    JAR_FILE=$(ls target/*.jar 2>/dev/null | head -n 1)
                    if [ -z "$JAR_FILE" ]; then
                      echo "‚ùå ERROR: No JAR file found in target/!"
                      exit 1
                    fi

                    echo "‚úÖ Found JAR: $JAR_FILE"
                    echo "Running the JAR file..."
                    java -jar "$JAR_FILE"
                '''
            }
        }
    }

    post {
        failure {
            echo '‚ùå Build failed ‚Äî check above logs for the exact command that returned exit code 1.'
        }
        success {
            echo '‚úÖ Pipeline completed successfully.'
        }
    }
}
